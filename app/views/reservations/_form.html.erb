<%= form_with(model: reservation, local: true) do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
        <% reservation.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :"First Name" %>
    <%= form.text_field :f_name %>
  </div>

  <div class="field">
    <%= form.label :"Last Name" %>
    <%= form.text_field :l_name %>
  </div>

  <div class="field">
    <%= form.label :"Phone Number" %>
    <%= form.telephone_field :phone_num %>
  </div>

  <div class="field">
    <%= form.label :"Model Year" %>
    <%= form.select :year, (Time.zone.now.year - 80)..(Time.zone.now.year + 1)  %>
  </div>

  <div class="field">
    <%= form.label :"Car Make" %>
    <%= form.text_field :make %>
  </div>

  <div class="field">
    <%= form.label :"Car Model" %>
    <%= form.text_field :model %>
  </div>

  <div class="field">
    <%= form.label :"What do you Need Repaired?" %>
    <%= form.text_area :repair %>
  </div>

  <div class="field">
    <%= form.label :"Please Request a Date and Time" %>
    <%= form.datetime_select :date, :ampm => true, :minute_step => 15, :start_year => 2020, :start_hour => 9, :end_hour => 17 %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: session[:current_user_id] %>
  </div>

  <div>
    <%= form.hidden_field :ip, value: session[:user_ip] %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
